<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Footer</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        @keyframes fadeInUp {
            from { 
                opacity: 0;
                transform: translateY(20px);
            }
            to { 
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .footer-animate {
            animation: fadeInUp 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
        }
        
        .progress-track {
            height: 3px;
            background: rgba(255, 255, 255, 0.1);
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            overflow: hidden;
        }
        
        .progress-bar {
            height: 100%;
            width: 0;
            background: linear-gradient(90deg, #3b82f6, #8b5cf6);
            transition: width 0.4s ease;
        }
        
        .glow-text {
            text-shadow: 0 0 8px rgba(59, 130, 246, 0.5);
            transition: all 0.3s ease;
        }
        
        .glow-text:hover {
            text-shadow: 0 0 12px rgba(59, 130, 246, 0.8);
        }
        
        .version-badge {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(139, 92, 246, 0.2));
            border: 1px solid rgba(59, 130, 246, 0.3);
            font-family: 'Courier New', monospace;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
        }
        
        .version-badge::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                to bottom right,
                rgba(255, 255, 255, 0) 0%,
                rgba(255, 255, 255, 0.1) 50%,
                rgba(255, 255, 255, 0) 100%
            );
            transform: rotate(30deg);
            animation: shine 3s infinite;
        }
        
        @keyframes shine {
            0% { transform: translateX(-100%) rotate(30deg); }
            100% { transform: translateX(100%) rotate(30deg); }
        }
        
        .social-icon {
            transition: all 0.3s ease;
            color: rgba(156, 163, 175, 1);
        }
        
        .social-icon:hover {
            transform: translateY(-3px) scale(1.1);
            color: #3b82f6;
            filter: drop-shadow(0 0 8px rgba(59, 130, 246, 0.6));
        }
        
        .footer-bg {
            background: rgba(17, 24, 39, 0.9);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 -5px 30px rgba(0, 0, 0, 0.2);
        }
        
        .tech-font {
            font-family: 'Courier New', monospace;
            letter-spacing: 0.05em;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col bg-gray-900 text-gray-100">
    <!-- Your main content here -->
    <main class="flex-grow mb-16 p-4">
        <div class="max-w-4xl mx-auto text-center py-20">
            <h1 class="text-4xl font-bold mb-6">Your Awesome Content</h1>
            <p class="text-xl text-gray-300">This is where your main page content would go.</p>
        </div>
    </main>

    <!-- Fixed Footer -->
    <footer class="w-full footer-bg footer-animate fixed bottom-0 z-50">
        <div class="progress-track">
            <div class="progress-bar" id="loadProgress"></div>
        </div>
        <div class="container mx-auto px-4 py-3">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="flex items-center mb-3 md:mb-0 space-x-2">
                    <div class="version-badge px-3 py-1 rounded-md text-xs tech-font">
                        v0.0.1
                    </div>
                    <p class="text-sm text-gray-300">
                        Powered by <span class="glow-text text-blue-300 font-bold tech-font">GFX.NODES</span>
                    </p>
                </div>
                
                <div class="flex items-center space-x-4">
                    <div class="hidden sm:flex items-center text-xs text-gray-400 tech-font">
                        <i class="fas fa-bolt mr-1 text-blue-400"></i>
                        <span id="loadtime">0.00s</span>
                    </div>
                    
                    <div class="flex space-x-3">
                        <a href="#" class="social-icon">
                            <i class="fab fa-github text-lg"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-discord text-lg"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter text-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Enhanced loading performance measurement
        document.addEventListener('DOMContentLoaded', () => {
            const startTime = performance.now();
            
            window.addEventListener('load', () => {
                const loadEnd = performance.now();
                const loadTime = ((loadEnd - startTime) / 1000).toFixed(2);
                
                // Animate progress bar to completion
                const progressBar = document.getElementById('loadProgress');
                if (progressBar) {
                    progressBar.style.width = '100%';
                }
                
                // Animate the load time counter
                let current = 0;
                const increment = loadTime / 20;
                const loadTimeElement = document.getElementById('loadtime');
                
                if (loadTimeElement) {
                    const counter = setInterval(() => {
                        current = Math.min(parseFloat(current) + parseFloat(increment), loadTime);
                        loadTimeElement.textContent = current.toFixed(2) + 's';
                        
                        if (current >= loadTime) {
                            clearInterval(counter);
                            // Add special effect for fast loads
                            if (loadTime < 0.5) {
                                loadTimeElement.innerHTML = `<span class="text-green-300">${loadTime}s <i class="fas fa-bolt text-yellow-300 ml-1"></i></span>`;
                            }
                        }
                    }, 20);
                    
                    // Fade out progress bar
                    setTimeout(() => {
                        if (progressBar) {
                            progressBar.style.opacity = '0';
                            setTimeout(() => {
                                const track = document.querySelector('.progress-track');
                                if (track) {
                                    track.style.height = '0';
                                }
                            }, 500);
                        }
                    }, 1000);
                }
            });
        });

        // Simple fallback for older browsers
        if (!window.performance) {
            const startTime = Date.now();
            window.addEventListener('load', () => {
                const loadTime = ((Date.now() - startTime) / 1000).toFixed(2);
                const loadTimeElement = document.getElementById('loadtime');
                if (loadTimeElement) {
                    loadTimeElement.textContent = loadTime + 's';
                }
                const progressBar = document.getElementById('loadProgress');
                if (progressBar) {
                    progressBar.style.width = '100%';
                }
            });
        }
    </script>
</body>
</html>
